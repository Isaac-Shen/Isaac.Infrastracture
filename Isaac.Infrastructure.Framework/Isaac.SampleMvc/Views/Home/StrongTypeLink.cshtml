@model Isaac.SampleMvc.Models.StrongTypeLinkSample

@{
    ViewBag.Title = "StrongTypeLinkSample";
}

<h2>Strong-Type-Link Sample</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="form-group">
    <p>Your Name: @Html.TextBoxFor(
        x => x.Name,
        new { @class = "form-control" })
    </p>
        </div>
    <div class="form-group">
        <p>
            Attend In: @Html.DropDownListFor(
x => x.WillAttend,
new[] {
     new SelectListItem() {
         Text ="Yes",
         Value = bool.TrueString
     },
     new SelectListItem() {
         Text ="Sorry no",
         Value = bool.FalseString
     }
},
"Choose an option",
new { @class = "form-control" })
        </p>
    </div>
    <input class="btn btn-default" type="submit" value="Submit">
}

