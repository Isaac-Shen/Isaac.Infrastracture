<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | IOA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top rounded-bottom">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Isaac's OA</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#functionNav" aria-controls="functionNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="functionNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="faq-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">工单</a>
                        <div class="dropdown-menu" aria-labelledby="faq-dropdown">
                            <a class="dropdown-item" href="#">提交工单</a>
                            <a class="dropdown-item" href="#">我的工单</a>
                            <a class="dropdown-item" href="#">待处理工单</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="report-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">报告</a>
                        <div class="dropdown-menu" aria-labelledby="report-dropdown">
                            <a class="dropdown-item" href="#">提交报告</a>
                            <a class="dropdown-item" href="#">我的报告</a>
                            <a class="dropdown-item" href="#">我的回复</a>
                            <a class="dropdown-item" href="#">发现报告</a>
                        </div>
                    </li> 
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="mgr-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">管理</a>
                        <div class="dropdown-menu" aria-labelledby="mgr-dropdown">
                            <a class="dropdown-item" href="#">通知管理</a>
                            <a class="dropdown-item" href="#">权限管理</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav my-2 my-md-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="message-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-2x fa-commenting-o"></i>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="message-dropdown">
                            <a class="dropdown-item" href="#">系统信息</a>
                            <a class="dropdown-item" href="#">个人消息</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="login-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-2x fa-user-circle-o"></i>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="login-dropdown">
                            <a class="dropdown-item" href="#">登录注册</a>
                            <a class="dropdown-item" href="#">个人信息</a>
                            <a class="dropdown-item" href="#">退出</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Isaac's OA</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
